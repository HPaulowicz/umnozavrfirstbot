{
	"name": "@hpaulowicz/umnozavrfirstbot",
	"displayName": "Telegram bot",
	"description": "",
	"version": "1.0.0",
	"main": "dist/core/bot.js",
	"publishConfig": {
		"access": "public"
	},
	"author": "",
	"license": "MIT",
	"engines": {
		"node": ">=14.0.0"
	},
	"scripts": {
		"client-install": "cd client && npm install",
		"init:certs": "ts-node scripts/initCerts.ts",
		"start": "rollup -c && node dist/index.js",
		"start-pm2": "pm2 start .pm2-process.json",
		"stop-pm2": "pm2 stop .pm2-process.json",
		"dev": "ts-node scripts/debug.ts --enable && ts-node scripts/rmdist.ts && nodemon --exec 'ts-node --compiler typescript app/index.ts'",
		"build": "tsc",
		"test": "jest app",
		"docs": "git submodule update --recursive && markserv ./README.md",
		"lint": "npm run lint-prettify && eslint . --cache --ext .ts,.js",
		"lint-fix": "npm run lint-prettify && eslint . --cache --ext .ts,.js --fix",
		"lint-prettify": "prettier --write --ignore-unknown '**/*.{ts,md,json}'",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"localtunnel": "^2.0.2",
		"pg": "^8.11.3",
		"sirv-cli": "^1.0.0",
		"telegraf": "^4.14.0",
		"typeorm": "^0.3.17"
	},
	"devDependencies": {
		"@ptkdev/all-shields-cli": "^2.0.2",
		"@rollup/plugin-commonjs": "^12.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"@rollup/plugin-terser": "^0.4.4",
		"@sveltejs/adapter-node": "^1.3.1",
		"@types/cors": "^2.8.15",
		"@types/express": "^4.17.13",
		"@types/jest": "^26.0.23",
		"@types/localtunnel": "^2.0.1",
		"@types/lowdb": "^1.0.9",
		"@types/node": "^15.0.1",
		"@types/shelljs": "^0.8.8",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"all-contributors-cli": "^6.20.0",
		"eslint": "^7.25.0",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-jsdoc": "^32.3.3",
		"jest": "^26.6.3",
		"json": "^11.0.0",
		"markserv": "^1.17.4",
		"nodemon": "^2.0.7",
		"pm2": "^5.3.0",
		"prettier": "^2.2.1",
		"replace-in-file": "^6.2.0",
		"rollup": "^2.3.4",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-svelte": "^6.1.1",
		"shelljs": "^0.8.4",
		"svelte": "^3.0.0",
		"ts-jest": "^26.5.5",
		"ts-node": "^10.7.0",
		"ts-patch": "^2.0.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^4.2.4",
		"typescript-transform-paths": "^2.2.3",
		"yargs": "^16.2.0"
	},
	"keywords": [],
	"contributors": []
}
